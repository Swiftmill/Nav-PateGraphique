{
  "name": "pate-graphique",
  "productName": "Pâte Graphique",
  "version": "0.1.0",
  "description": "Navigateur web ultra personnalisable basé sur Electron pour Pâte Graphique",
  "main": "dist/main/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "concurrently -k \"npm:dev:main\" \"npm:dev:renderer\"",
    "dev:main": "cross-env NODE_ENV=development ts-node --project tsconfig.main.json src/main/main.ts",
    "dev:renderer": "cross-env NODE_ENV=development vite --config vite.config.mts",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json",
    "build:renderer": "cross-env NODE_ENV=production vite build --config vite.config.ts",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "package": "npm run build && electron-builder --win portable --x64",
    "package:all": "npm run build && electron-builder --win --mac --linux"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.26.1",
    "@tanstack/react-query": "^5.8.3",
    "axios": "^1.6.8",
    "cross-fetch": "^3.1.8",
    "electron-store": "^9.0.0",
    "electron-updater": "^6.1.8",
    "eventemitter3": "^5.0.1",
    "file-type": "^18.7.0",
    "keytar": "^7.9.0",
    "lodash": "^4.17.21",
    "lowdb": "^6.0.1",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.65",
    "@types/react-beautiful-dnd": "^13.1.3",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.3.1",
    "electron-builder": "^24.6.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "sass": "^1.70.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}
